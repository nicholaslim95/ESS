<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/bottom_nav_bar_color</item>
    </style>

    <style name="nav_drawer_icon_color" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">#800000</item>
    </style>

    <!--theme for a basic button-->
    <style name="basic_button">
        <item name="android:background">@drawable/button_rounded_corner</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="h3_text_theme">
        <item name="android:textColor">@color/lighter_dark_blue</item>
        <item name="android:fontFamily">@font/rubik_light</item>
        <!--may add text size in the future-->
    </style>

    <style name="h4_text_theme">
        <item name="android:textColor">@color/lighter_dark_blue</item>
        <item name="android:fontFamily">@font/rubik_light</item>
        <!--may add text size in the future-->
    </style>

    <style name="nav_drawer_text_theme">
        <item name="android:textColor">@color/lighter_dark_blue</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

</resources>
